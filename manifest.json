{
  "manifest_version": 2,

  "name": "Auriga Extension for Chrome",
  "description": "This extension shows contextual actions",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "declarativeContent",
    "activeTab",
    "http://localhost:8080/"
  ]
}